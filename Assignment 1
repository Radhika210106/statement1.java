import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        
        System.out.println("Enter the name:");
        String name = input.nextLine();

        System.out.println("Enter the age:");
        int age = input.nextInt();
        input.nextLine(); 

        System.out.println("Enter the height (in cm):");
        double height = input.nextDouble();
        input.nextLine();

        System.out.println("Enter the weight (in kg):");
        double weight = input.nextDouble();
        input.nextLine();

        System.out.println("Enter the phone number:");
        String phoneNumber = input.nextLine();

        System.out.println("Enter email:");
        String email = input.nextLine();

        
        System.out.println("Enter your roll number (short value):");
        short rollNumber = input.nextShort();
        input.nextLine();

        
        System.out.println("Enter a long number (Student ID):");
        long longValue = input.nextLong();
        input.nextLine();

       
        System.out.println("Enter a grade (character):");
        char grade = input.next().charAt(0);
        input.nextLine();

        
        System.out.println("Are you male? (true for male / false for female):");
        boolean isMale = input.nextBoolean();
        input.nextLine();

       
        System.out.println("\nUser Details ");
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("Height: " + height + " cm");
        System.out.println("Weight: " + weight + " kg");
        System.out.println("Phone Number: " + phoneNumber);
        System.out.println("Email: " + email);
        System.out.println("Roll Number: " + rollNumber);
        System.out.println("Long Value (e.g., ID): " + longValue);
        System.out.println("Grade: " + grade);
        System.out.println("Gender: " + (isMale ? "Male" : "Female"));

        input.close();
    }
}
