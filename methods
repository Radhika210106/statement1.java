code 2:
 
import java.util.Scanner;    
class Main {
    
        public static void myMethod(String fname,String lname,int age,double height,double weight){
            System.out.println(fname+ " "+lname+" "+age+" "+height+" "+weight);
        }
    
    public static void main(String []args){
        myMethod("radhi","S",19,5.2,40);
    }
}
    output:
      radhi S 19 5.2 40.0
code 3:
  import java.util.Scanner;

class Main {
    
    public static void myMethod(int num1, int num2, char operator) {
        switch(operator) {
            case '+':
                System.out.println("Result: " + (num1 + num2));
                break;
            case '-':
                System.out.println("Result: " + (num1 - num2));
                break;
            case '*':
                System.out.println("Result: " + (num1 * num2));
                break;
            case '/':
                
                    System.out.println("Result: " + (num1 / num2));
               
                break;
            default:
                System.out.println("Invalid operator.");
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter first number: ");
        int num1 = sc.nextInt();

        System.out.print("Enter second number: ");
        int num2 = sc.nextInt();

        System.out.print("Enter operator: ");
        char operator = sc.next().charAt(0);

        myMethod(num1, num2, operator);

        sc.close();
    }
}
output:
Enter first number: 4
Enter second number: 7
Enter operator: +
Result: 11

code 4:
import java.util.Scanner;

class Main {

    public static void myMethod(String name, String password, String login) {
        String correctName = "Radhi2106";
        String correctPassword = "radhi@123";
        

        if (name.equals(correctName) && password.equals(correctPassword)) {
            System.out.println("Welcome to the login page");
        } else {
            System.out.println("Invalid data");
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("User name: ");
        String name = sc.nextLine();

        System.out.print("Password: ");
        String password = sc.nextLine();

        System.out.print("Login");
        String login = sc.nextLine();

        myMethod(name, password, login);

        sc.close();
    }
}
output:
User name: Radhi2106
Password: radhi@123
Login
Welcome to the login page


